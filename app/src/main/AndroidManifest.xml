<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsneva.wliteandroid" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.appsneva.wliteandroid.WLiteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Wavlite" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.appsneva.wliteandroid.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appsneva.wliteandroid.ui.LogIn"
            android:label="@string/title_activity_log_in"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.appsneva.wliteandroid.ui.SignUp"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="com.appsneva.wliteandroid.ui.LogIn"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.appsneva.wliteandroid.SearchActivity"
            android:label="@string/title_activity_search"
            android:parentActivityName="com.appsneva.wliteandroid.ui.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appsneva.wliteandroid.ui.MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                />

        </activity>
        <activity
            android:name="com.appsneva.wliteandroid.PlayerActivity"
            android:parentActivityName="com.appsneva.wliteandroid.SearchActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
