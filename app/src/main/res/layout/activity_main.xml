<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/activity_main_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context=".MainActivity">



    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar" />


    <WebView
        android:id="@+id/webView"
        android:layout_width="wrap_content"
        android:layout_height="221dp"
        android:layout_below="@id/app_bar"
        android:background="@android:color/black"

        android:layout_margin="0dp"
        android:layout_centerHorizontal="true"
        android:padding="0dp" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/close_button"
        android:src="@android:drawable/ic_delete"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_below="@id/app_bar"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ListView
        android:id="@+id/videos_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/webView"
        android:dividerHeight="@dimen/activity_main_divider_height"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:drawSelectorOnTop="false"
        android:headerDividersEnabled="true"
        android:layout_marginLeft="@dimen/activity_main_margin_horizontal"
        android:layout_marginTop="@dimen/activity_main_margin_vertical"
        android:layout_marginRight="@dimen/activity_main_margin_horizontal"
        android:layout_marginBottom="@dimen/activity_main_margin_vertical" />

</RelativeLayout>
