<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal"
    android:id="@+id/detail_list_row"
    android:animateLayoutChanges="true"
    android:weightSum="6">

<!--
    This file controls the UI components for the Detailed List View. Use this to change text color
    and other UI components, such as the video image thumbnails
-->
    <ImageView
        android:id="@+id/detail_thumbnail"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal|left"
        android:scaleType="fitCenter"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:src="@drawable/place_holder"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/primary"
        android:layout_weight="2" />

    <TextView
        android:textColor="@color/text_white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/detail_title"
        android:maxLines="3"
        android:layout_weight="3" />

    <CheckBox
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox1"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal|right"
        android:layout_marginLeft="20dp" />


