<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin_login"
    android:paddingRight="@dimen/activity_horizontal_margin_login"
    android:paddingTop="@dimen/activity_vertical_margin_login"
    android:paddingBottom="@dimen/activity_vertical_margin_login"
    android:background="@color/activity_main_background"
    tools:context="com.appsneva.WLAndroid.ui.SignUp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUN"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/form_tbox_l_padding"
        android:paddingTop="@dimen/form_tbox_t_padding"
        android:paddingRight="@dimen/form_tbox_r_padding"
        android:paddingBottom="@dimen/form_tbox_b_padding"
        android:hint="@string/userName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:layout_below="@+id/editTextUN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/form_tbox_l_padding"
        android:paddingTop="@dimen/form_tbox_t_padding"
        android:paddingRight="@dimen/form_tbox_r_padding"
        android:paddingBottom="@dimen/form_tbox_b_padding"
        android:hint="@string/userEmail" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPW"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/form_tbox_l_padding"
        android:paddingTop="@dimen/form_tbox_t_padding"
        android:paddingRight="@dimen/form_tbox_r_padding"
        android:paddingBottom="@dimen/form_tbox_b_padding"
        android:hint="@string/password" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signUpBtnText"
        android:id="@+id/btnSignUp"
        android:layout_below="@+id/editTextPW"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/form_btn_l_padding"
        android:paddingTop="@dimen/form_btn_t_padding"
        android:paddingRight="@dimen/form_btn_r_padding"
        android:paddingBottom="@dimen/form_btn_b_padding"
        android:layout_marginTop="@dimen/signup_btn_t_margin"
        android:background="@color/login_btn_background"
        android:textColor="@color/login_btn_textColor"
        android:textSize="@dimen/login_btn_textSize"
        android:textStyle="bold"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Login (not yet linked)"
        android:id="@+id/textView"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/btnSignUp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
