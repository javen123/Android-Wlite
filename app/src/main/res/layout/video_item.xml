<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

<!--
    This controls the search view results image and text (color). The image view is for the video
    video image thumbnail and the text view is for the video title information. Use this xml for
    making changes to the font and font color as well as other graphical UI characteristics.
-->

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal|left"
        android:scaleType="fitCenter"
        android:layout_width="106dp"
        android:layout_height="60dp"
        android:src="@drawable/place_holder"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/primary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginLeft="5dp"
        android:maxLines="3"
        android:layout_marginRight="5dp"
        android:textColor="@color/text_blue_xlite"
        android:gravity="center_horizontal|left" />

