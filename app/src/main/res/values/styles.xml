<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <!-- check into overwriting these values so we can leave these as defaults -->
    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/activity_main_background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <style name="Theme.Wavlite" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!-- colorControlHighlight requires api 21 minimum -->
        <item name="android:actionOverflowButtonStyle">@style/collapseButtonStyle</item>
        <item name="android:actionMenuTextColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:titleTextStyle">@style/TextAppearance.AppCompat.Title</item>
     </style>

    <!-- THIS IS THE CURRENT THEME FOR THE TOOLBAR! -->
    <style name="ActionBarThemeTop" parent="">
        <item name="android:textColorPrimary">@color/toolbar_text_primary</item>
        <!-- colorControlHighlight requires api 21 minimum -->
        <item name="android:actionOverflowButtonStyle">@style/collapseButtonStyle</item>
        <item name="android:actionMenuTextColor">@color/toolbar_text_primary</item>
        <item name="android:textColorSecondary">@color/toolbar_text_secondary</item>
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:titleTextStyle">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="collapseButtonStyle">
        <item name= "android:src">@drawable/menu_horz</item>
    </style>

    <!-- My Lists View Theme -->
    <style name="MyListsView" parent="">
        <item name="android:textColor">@color/text_grey_light</item>
    </style>

</resources>
