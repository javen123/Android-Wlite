<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/activity_main_background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>

    </style>

    <style name="Theme.Wavlite" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!-- colorControlHighlight requires api 21 minimum -->
        <item name="android:colorControlHighlight">@color/primary_light</item>
        <item name="android:actionMenuTextColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:background">@color/toolbar_background</item>



    </style>





</resources>
